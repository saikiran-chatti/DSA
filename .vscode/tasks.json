{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Python3 run active file",
      "command": "python3",
      "args": [
        "${file}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "detail": "Runs the active Python file with python3"
    }
  ]
}